<%- include('../partials/header'); -%>
<div class="container">
	<div class="row justify-content-center topPadding">
		<div class="col-md-12">
			<div class="card card-background">
				<h1 class="card-header border-0 cucumber-gradient text-center profilePad">
					<%= user.username %>'s Profile
				</h1>
				<div class="card-body text-center profileImg">
					<img class="imgShadow" src="<%= user.avatar %>" alt="user profile image">
					<h4>Name:
						<%= user.firstName + " " + user.lastName %>
					</h4>
					<h4>City:
						<%= user.city %>
					</h4>
					<h4>Email:
						<a href="mailto:<%= user.email %>">
							<%= user.email %>
						</a>
					</h4>
					<table>
						<tr>
							<td>Name: </td>
							<td>
								<%= user.firstName + " " + user.lastName %>
							</td>
						</tr>
						<tr>
							<td>City: </td>
							<td>
								<%= user.city %>
							</td>
						</tr>
						<tr>
							<td>Email: </td>
							<td>
								<a href="mailto:<%= user.email %>">
									<%= user.email %>
								</a>
							</td>
						</tr>
					</table>
					<h4>Posts created:</h4>
					<ul>
						<% posts.reverse().forEach(function(post){ %>
							<li>
								<a href="/posts/<%= post.id %>">
									<%= post.name %>
								</a>
							</li>
							<% }); %>
					</ul>
					<a class="btn btn-sm btn-info backButton" href="/posts">Go Back</a>
				</div>
			</div>
		</div>
	</div>
</div>
<%- include('../partials/footer'); -%>