<%- include('../partials/blogHeader'); -%>

<div class="container-fluid">
	<% if(currentUser && currentUser.isAdmin == true){ %>
		<div class="jumbotron text-center">
			<div class="container">
				<div class="row justify-content-center">
					<h1>Welcome,
						<%= currentUser.username %>!</h1>
				</div>
				<div class="row justify-content-center">
					<p>You've reached the admin panel. From here, you can add a post.</p>
				</div>
				<div class="row justify-content-center">
					<p>
						<a class="btn border-0 shampoo-gradient" href="/posts/new" role="button">
							<i class="fas fa-pencil-alt"></i> Add New Post</a>
					</p>
				</div>
			</div>
		</div>
		<% } %>

			<div class="row">
				<% posts.reverse().forEach(function(post){ %>
					<div class="col-md-6 col-lg-4 col-xl-2">
						<div class="card card-overlay slender mb-4">
							<div class="view view-overlay">
							<img class="card-img-top" src="<%= post.image %>">
								</div>
							<div class="card-body text-center">
								<h4 class="card-title">
									<%= post.name %>
								</h4>
								<p class="card-text">
									<%= post.description %>
								</p>
							<p>
								<a href="/posts/<%= post._id %>" class="btn border-0 shampoo-gradient">Read More...</a>
							</p>
								</div>
							<div class="card-footer text-muted text-center">
								<%= moment(post.createdAt).fromNow() %>
							</div>
						</div>
					</div>
					<% }); %>
			</div>
</div>
    
    
<%- include('../partials/blogFooter'); -%>