<%- include('../partials/header'); -%>

    <div class="container">
        <div class="row">
            <h1 id="titleForm">Edit <%= post.name %></h1>
            <div class="form">
                <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="post[name]" id="name" value="<%= post.name %>">
                    </div>
					                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" type="text" name="post[image]" id="image" value="<%= post.image %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" name="post[description]" id="description" value="<%= post.description %>">
                    </div>
                    <div class="form-group">
                        <label for="entry">Post Entry</label>
						<textarea class="form-control" name="post[entry]" id="entry" rows="4"><%= post.entry %></textarea>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/posts/<%= post._id %>">Go Back</a>
            </div>
        </div>
	</div>
   


<%- include('../partials/footer'); -%>