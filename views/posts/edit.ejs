<%- include('../partials/header'); -%>

    <div class="container">
        <div class="row">
            <h1 id="titleForm">Edit <%= post.name %></h1>
            <div class="form">
                <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input class="form-control" type="text" name="post[name]" id="name" value="<%= post.name %>">
                    </div>
                    <div class="form-group">
                        <label for="price">Price</label>
                        <input class="form-control" type="number" name="post[price]" id="price" value="<%= post.price %>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input class="form-control" type="text" name="post[image]" id="image" value="<%= post.image %>">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <input class="form-control" type="text" name="post[description]" id="description" value="<%= post.description %>">
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label>
                        <input class="form-control" type="text" name="post[location]" id="location" value="<%= post.location %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/posts">Go Back</a>
            </div>
        </div>
	</div>
   


<%- include('../partials/footer'); -%>