<%- include('../partials/blogHeader'); -%>

   
        <div class="row">
            <h1 id="titleForm">Add New Comment to <%= post.name %></h1>
            <div class="form">
                <form action="/blog/<%= post._id %>/comments" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </form>
                <a href="/posts">Go Back</a>
            </div>
        </div>
   

<%- include('../partials/blogFooter'); -%>